<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left side Thumbnail image -->

    <LinearLayout
        android:id="@+id/thumbnailcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/image_bg"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/list_imagecart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/bucket" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgArrowcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/zoom_in"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvOrderDescriptioncart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgArrowcart"
        android:layout_toRightOf="@+id/thumbnailcart"
        android:text="Order Description..."
        android:textColor="#333333"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/tvorderItemIdcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumbnailcart"
        android:layout_alignLeft="@+id/tvOrderDescriptioncart"
        android:text="id"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>